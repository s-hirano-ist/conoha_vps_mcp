{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  timezone: 'Asia/Tokyo',
  baseBranchPatterns: [
    'staging',
  ],
  extends: [
    'config:recommended',
    'config:best-practices',
    ':semanticCommitTypeAll(chore)',
    'customManagers:biomeVersions',
    ':enableVulnerabilityAlertsWithLabel(security)',
  ],
  reviewers: [
    's-hirano-ist',
  ],
  enabledManagers: [
    'npm',
    'github-actions',
    'docker-compose',
    'dockerfile',
  ],
  dependencyDashboard: true,
  schedule: [
    'before 11am on monday',
  ],
  labels: [
    'dependencies',
  ],
  rangeStrategy: 'bump',
  lockFileMaintenance: {
    enabled: true,
  },
  packageRules: [
    {
      matchPackageNames: [
        'node',
      ],
      matchManagers: [
        'dockerfile',
      ],
      allowedVersions: '/^[0-9]*[02468]([.-].*)?$/',
      minimumReleaseAge: '2 days'
    },
    {
      matchManagers: [
        'npm',
      ],
      matchUpdateTypes: [
        'patch',
      ],
      matchPackageNames: [
        '*',
      ],
      matchDepTypes: [
        'dependencies',
        'devDependencies',
        'peerDependencies',
      ],
      groupName: 'npm patch',
      minimumReleaseAge: '2 days'
    },
    {
      matchManagers: [
        'npm',
      ],
      matchUpdateTypes: [
        'minor',
      ],
      matchPackageNames: [
        '*',
      ],
      matchDepTypes: [
        'dependencies',
        'devDependencies',
        'peerDependencies',
      ],
      groupName: 'npm minor',
      minimumReleaseAge: '2 days'
    },
    {
      matchDepTypes: ['engines'],
      enabled: false,
    },
    {
      matchPackageNames: ['@types/node'],
      allowedVersions: '<=20',
      rangeStrategy: 'replace',
    },
    {
      matchManagers: [
        'github-actions',
      ],
      groupName: 'github actions',
      minimumReleaseAge: '2 days'
    },
  ],
}
